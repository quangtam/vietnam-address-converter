{
  "name": "vietnam-address-converter",
  "version": "1.0.4",
  "description": "Thư viện JavaScript/TypeScript để tự động chuyển đổi địa chỉ hành chính Việt Nam từ cũ sang mới theo Nghị quyết 202/2025/QH15",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/quangtam/vietnam-address-converter.git"
  },
  "bugs": {
    "url": "https://github.com/quangtam/vietnam-address-converter/issues"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:performance": "npm run build && node test-simple-performance.mjs",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "demo": "npm run build && node test-library.mjs",
    "demo:ts": "npx ts-node examples/demo.ts"
  },
  "keywords": [
    "vietnam",
    "address",
    "converter",
    "mapping",
    "administrative",
    "địa chỉ",
    "chuyển đổi",
    "hành chính",
    "vietnam-administrative-units",
    "address-conversion",
    "vietnam-address",
    "administrative-reform",
    "nghị-quyết-202",
    "vietnam-provinces",
    "vietnam-wards"
  ],
  "author": "Quang Tam <quangtamvu@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rollup": "^4.6.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "files": [
    "dist",
    "README.md",
    "QUICKSTART.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
